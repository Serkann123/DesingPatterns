@model RepositoryDesignPattern.EntityLayer.Concrete.Product

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<div class="container">
    <br>
    <br />

    <form method="post">

        <input type="hidden" class="form-control" asp-for="ProductId" />

        <label>Ürün Adı</label>
        <input type="text" class="form-control" asp-for="ProdeuctName" />
        <br />

        <label>Ürün Fiyatı</label>
        <input type="text" class="form-control" asp-for="ProductPrice" />
        <br />

        <label>Ürün Stok Sayısı</label>
        <input type="text" class="form-control" asp-for="ProductStock" />
        <br />

        <label>Ürün Kategorisi</label>
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.v1, new { @class = "form-control" })
        <br />

        <button class="btn btn-outline-secondary">Ürünü Güncelle</button>

    </form>

</div>