@model List<RepositoryDesignPattern.EntityLayer.Concrete.Product>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<div class="container">

    <table class="table table-bordered">

        <tr>
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Stok</th>
            <th>Fiyat</th>
            <th>Kategorisi</th>
            <th>Sil</th>
            <th>Güncelle</th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.ProdeuctName</td>
                <td>@item.ProductStock</td>
                <td>@item.ProductPrice</td>
                <td>@item.Category.CategoryName</td>
                <td><a href="/Product/RemoveProduct/@item.ProductId" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-outline-primary">Güncelle</a></td>
            </tr>
        }

    </table>

    <a href="/Product/AddProduct/" class="btn btn-outline-info">Yeni Ürün Ekle</a>
</div>