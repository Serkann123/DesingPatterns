@model DesignPattern.CQRS.CQRSPattern.Commands.CreateProductCommand

@{
    Layout = null;
}

<header>
    <style>
        body {
            background-color: black;
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            padding: 0;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        form {
            width: 500px;
        }

        label {
            font-size: 20px;
            font-weight: 500;
        }

        input {
            background-color: cornflowerblue;
            border: 2px solid green;
            color: black;
            outline: none;
            border-radius: 5px;
            width: 100%;
            padding: 5px 0px;
        }

        button {
            background-color: green;
            color: white;
            padding: 10px;
            margin: 10px 0px;
            width: 100%;
            border-radius: 10px;
            cursor: pointer;
            font-size: 15px;
        }

    </style>
</header>

<div class="container">
    <br />
    <form method="post">

        <label>Ürün Adı</label>
        <input type="text" asp-for="Name" />
        <br />

        <label>Ürün Açıklaması</label>
        <input type="text" asp-for="Description" />
        <br />

        <label>Ürün Fiyatı</label>
        <input type="text" asp-for="Price" />
        <br />

        <label>Stok</label>
        <input type="text" asp-for="Stock" />
        <br />

        <button class="btn btn-dark">Ürün Ekle</button>
    </form>

</div>